<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
    </style>

    <style name="MyAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_zoom_in</item>
        <item name="android:windowShowAnimation">@anim/anim_zoom_in</item>
    </style>

    <style name="AlertDialog">
        <item name="android:textColor">@color/teal_200</item>
        <item name="backgroundColor">@color/black</item>

    </style>

    <style name="AlertDialogTest">
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>